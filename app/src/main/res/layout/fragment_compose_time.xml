<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"> >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    >

    <LinearLayout
        android:id="@+id/fragComposeTime_linearLayout_description"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="@drawable/gray_square_background">

        <TextView
            android:id="@+id/fragComposeTime_textView_startTimePrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Time:"
            android:textSize="24sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/fragComposeTime_linearLayout_startTimePrompts">


            <EditText
                android:id="@+id/fragComposeTime_editText_startHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:hint="Enter hour"/>
            <TextView
                android:id="@+id/fragComposeTime_textViewStartHourCheck"
                android:textColor="#6E6368"
                android:textStyle="bold"
                android:textSize="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:layout_gravity="center_vertical"/>
            <EditText
                android:id="@+id/fragComposeTime_editText_startMinute"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Enter minute"
                android:gravity="right"
                android:textSize="16sp"
                android:textColor="#6E6368"/>


                <Spinner
                    android:id="@+id/spinnerStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/am_pm_array"
                    android:prompt="@string/am_pm_prompt" />

        </LinearLayout>


        <TextView
            android:id="@+id/fragComposeTime_textView_endTimePrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Time:"
            android:textSize="24sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/fragComposeTime_linearLayout_endTimePrompts">


            <EditText
                android:id="@+id/fragComposeTime_editText_endHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:hint="Enter hour"/>
            <TextView
                android:id="@+id/fragComposeTime_textViewEndHourCheck"
                android:textColor="#6E6368"
                android:textStyle="bold"
                android:textSize="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:layout_gravity="center_vertical"/>
            <EditText
                android:id="@+id/fragComposeTime_editText_endMinute"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Enter minute"
                android:gravity="right"
                android:textSize="16sp"
                android:textColor="#6E6368"/>
            <Spinner
                android:id="@+id/spinnerEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/am_pm_array"
                android:prompt="@string/am_pm_prompt" />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:id="@+id/fragComposeTime_linearLayout_cancel"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="right"
            android:background="@drawable/gray_square_background">

            <TextView
                android:id="@+id/fragComposeTime_textView_cancelPrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textSize="24sp"/>

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

        </Space>

        <LinearLayout
            android:id="@+id/fragComposeTime_linearLayout_okay"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center_vertical|right"
            android:layout_gravity="right"
            android:background="@drawable/gray_square_background">

            <TextView
                android:id="@+id/fragComposeTime_textView_okPrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Okay"
                android:textSize="24sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
    </ScrollView>