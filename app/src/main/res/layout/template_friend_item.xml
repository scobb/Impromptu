<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/picture_width_and_height"
    android:padding="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/templateFriendItem_imageView_picture"
        android:layout_width="@dimen/picture_width_and_height"
        android:layout_height="@dimen/picture_width_and_height"
        android:src="@drawable/ic_launcher"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="hello"
        android:id="@+id/templateFriendItem_textView_friendName"/>
    <CheckBox
        android:id="@+id/templateFriendItem_checkBox_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text=""/>

</LinearLayout>