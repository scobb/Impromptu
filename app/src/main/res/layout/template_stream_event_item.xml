<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/picture_width_and_height"
    android:padding="@dimen/list_vertical_padding"
    android:orientation="vertical"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@color/impromptu_list_gray" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/fragStream_imageView_picture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_launcher"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/fragStream_textView_user"
            android:paddingBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Jon Reynolds"
            android:gravity="bottom" />

    </LinearLayout>

    <TextView
        android:id="@+id/fragStream_textView_title"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Title"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/fragStream_textView_content"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:text="hello, this is a 180 word description. My event will be super cool. The longer the description, the better this looks."
        android:background="@color/impromptu_complementary_green"/>

    <TextView
        android:id="@+id/fragStream_textView_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="18sp"
        android:text="Right now!" />

</LinearLayout>