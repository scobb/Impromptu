<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fragComposePushGroups_imageView_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_accept" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/fragComposePushGroups_imageView_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_remove" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragComposePushGroups_linearLayout_groups"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/fragComposePushGroups_textView_groupsPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Groups:"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragComposePushGroups_listView_groupsList"></ListView>

    </LinearLayout>

</LinearLayout>