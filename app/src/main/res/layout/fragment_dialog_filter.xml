<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="#DDDDDD">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Filters"
        android:textStyle="bold"
        android:textSize="16sp"/>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:background="#DDDDDD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/filter_drinking_imageView"
            android:src="@drawable/drinking"
            android:layout_margin="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="center" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/filter_food_imageView"
            android:src="@drawable/food"
            android:layout_margin="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="center" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/filter_sport_imageView"
            android:src="@drawable/sport_icon"
            android:layout_margin="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="center" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:background="#DDDDDD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/filter_studying_imageView"
            android:src="@drawable/studying"
            android:layout_margin="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="center" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/filter_tv_imageView"
            android:src="@drawable/tv"
            android:layout_margin="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="center" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/filter_workingOut_imageView"
            android:src="@drawable/working_out"
            android:layout_margin="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="center" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>

    </LinearLayout>

