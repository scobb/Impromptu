<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fragComposeStream_imageView_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_accept" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/fragComposeStream_imageView_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_remove" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragComposeStream_linearLayout_groups"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="@drawable/gray_round_background">

        <TextView
            android:id="@+id/fragComposeStream_textView_groupsPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Groups"
            android:textStyle="bold"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/fragComposeStream_textView_groupsList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:textSize="12sp"
            android:textColor="@color/impromptu_list_gray"
            android:text="Friend 1, Friend 2, Friend 3, ..."
            android:maxLines="1"
            android:scrollHorizontally="false"
            android:ellipsize="end"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_next_item"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragComposeStream_linearLayout_friends"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/fragComposeStream_textView_friendsPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friends"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/fragComposeStream_listView_friendsList"></ListView>

    </LinearLayout>

</LinearLayout>