<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".Impromptu"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/activityMain_linearLayout_topMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FF4633">

        <Button
            android:id="@+id/activityMain_button_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:onClick="profile" />

        <Space
            android:id="@+id/activityMain_space_extra_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            ></Space>

        <Button
            android:id="@+id/activityMain_button_compose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compose"
            android:onClick="compose" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/activityMain_frameLayout_shell"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:id="@+id/activityMain_linearLayout_bottomMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FF4633">

        <Button
            android:id="@+id/activityMain_button_stream"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Stream"
            android:onClick="stream" />

        <Button
            android:id="@+id/activityMain_button_friends"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Friends"
            android:onClick="friends" />

        <Button
            android:id="@+id/activityMain_button_groups"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Groups"
            android:onClick="groups" />

        <Button
            android:id="@+id/activityMain_button_updates"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Updates"
            android:onClick="updates" />

        </LinearLayout>
</LinearLayout>
