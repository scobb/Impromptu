<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/templateTypeItem_imageView_typeImage"
        android:layout_width="@dimen/picture_width_and_height"
        android:layout_height="@dimen/picture_width_and_height"
        android:src="@drawable/ic_launcher"/>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:layout_marginLeft="24dp"
        android:gravity="center_vertical"
        android:text="hello"
        android:id="@+id/templateTypeItem_textView_typeName"/>

</LinearLayout>